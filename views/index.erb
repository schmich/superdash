<html>
<head>
  <link rel="stylesheet" type="text/css" href="/public/bootstrap.min.css" />
  <link rel="stylesheet" type="text/css" href="/public/app.css" />
  <script src="/public/angular.min.js"></script>
  <script src="/public/angular-filter.min.js"></script>
  <script src="/public/app.js"></script>
</head>
<body ng-app="superdash" ng-controller="DashboardCtrl">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <form ng-controller="CreateHostCtrl" ng-submit="submit()">
          <input type="text" ng-model="name" placeholder="Name">
          <input type="text" ng-model="host" placeholder="IP or hostname">
          <input type="text" ng-model="port" placeholder="Port">
          <input type="submit" class="btn btn-default" value="Add Host">
        </form>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="host" ng-repeat="(_, host) in hosts" ng-controller="HostCtrl">
          <div class="summary">
            <h3>{{host.name}}</h3>
            <span class="url">http://{{host.host}}:{{host.port}}</span>
            <a href="" class="delete" ng-click="delete(host)">Remove host</a>
          </div>
          <div class="control">
            <button ng-disabled="!host.connected" class="btn btn-default">Start All</button>
            <button ng-disabled="!host.connected" class="btn btn-default">Stop All</button>
            <button ng-disabled="!host.connected" class="btn btn-default">Restart All</button>
          </div>
          <div ng-if="host.connected" class="processes" ng-repeat="(group, processes) in host.processes | groupBy: 'group'">
            <div class="process" ng-repeat="process in processes" ng-controller="ProcessCtrl">
              <section class="{{process.state | processState}}">
                <div class="row">
                  <div class="col-md-7"><span class="group">{{process.group}}</span> {{process.name}}</div>
                  <div class="col-md-2">{{process.state | processState}}</div>
                  <div class="col-md-3">
                    <div class="pull-right">
                      <button class="btn btn-default" ng-click="control(process, 'start')" ng-if="process.state == states.stopped">Start</button>
                      <button class="btn btn-default" ng-click="control(process, 'stop')" ng-if="process.state == states.running">Stop</button>
                      <button class="btn btn-default" ng-click="watchLog(process)">
                        <span ng-if="process.watchLog">Hide Log</span>
                        <span ng-if="!process.watchLog">Show Log</span>
                      </button>
                    </div>
                  </div>
                </div>
              </section>
              <section ng-if="process.watchLog" class="log-container">
                <div class="row">
                  <div autoscroll="process.log" class="col-md-12 log">{{process.log}}</div>
                </div>
              </section>
            </div>
          </div>
          <div ng-if="host.error">
            <div class="alert alert-danger">
              Cannot connect to host.
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
